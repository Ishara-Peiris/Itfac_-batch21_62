<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/logs/test-automation.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Serenity BDD logging -->
    <logger name="net.serenity" level="INFO"/>
    <logger name="net.thucydides" level="INFO"/>
    
    <!-- WebDriver logging -->
    <logger name="org.openqa.selenium" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    
    <!-- RestAssured logging -->
    <logger name="io.restassured" level="INFO"/>
    
    <!-- Application test logging -->
    <logger name="com.qatraining" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
